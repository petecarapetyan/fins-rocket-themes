<!doctype html>
  {% block htmlTag %}
    <html lang="{{site.lang}}" dir="{{site.dir}}">
  {% endblock htmlTag %}
  <head>
    {% block headContent %}
      {% include 'partials/head-content.njk' %}
    {% endblock %}
  </head>

  <body layout="home">
    <div class="rocket-content header-grid-area">
      {% block header %}
        {% include 'partials/header.njk' %}
      {% endblock header%}
    </div>

    <div class="theme-able ga-head2-main">
      <p>head2-main</p>
    </div>

    <div class="theme-able ga-content-l"></div>
    <div class="theme-able ga-content-main">
      <p>Lorem ipsum d</p>
    </div>
    <div class="rocket-content content-grid-area">
      {% block main %}
          <main class="markdown-body">
            <img class="page-logo" src="{{ '_assets/logo.svg' | asset | url }}" alt="{{ site.title }} Logo"/>
            {% if rocketLaunch.homeLayout === 'background' %}
              <img class="page-background" src="{{ '_assets/home-background.svg' | asset | url }}" role="presentation"/>
            {% endif %}
            <h1 class="page-title">{{ title }}</h1>
            <p class="page-slogan">{{slogan}}</p>
            <div class="call-to-action-list" role="list">
              {% for callToAction in callToActionItems %}
                <a class="call-to-action" href="{{ callToAction.href | url }}" role="listitem">{{ callToAction.text | safe }}</a>
              {% endfor %}
            </div>
            <h2 class="reason-header">{{ reasonHeader }}</h2>
            <section class="reasons">
              {% for reason in reasons %}
                <article>
                  <h3>{{ reason.header }}</h3>
                  {{ reason.text | safe }}
                </article>
              {% endfor %}
            </section>
            {{ content.html | safe }}
            {% include 'partials/previousNext.njk' %}
          </main>
        {% endblock main %}
    </div>
    <div class="theme-able ga-content-r"></div>

    <div class="rocket-content sidebar-grid-area">
      {% block sidebar %}
        <rocket-drawer id="sidebar">
          <nav slot="content" id="sidebar-nav">
            {% include 'partials/logoLink.njk' %}
            <rocket-navigation>
              <ul>
                {%- for entry in collections.header %}
                  <li>
                    <a href="{{ entry.url | url }}" class="
                      {% if entry.url == page.url %} current {% endif %}
                      {% if (page.url.search(entry.url) !== -1) and (page.url !== '/') %} active {% endif %}
                    ">{{ entry.data.eleventyNavigation.key }}</a>
                  </li>
                {%- endfor %}
              </ul>
              {% include 'partials/mobile-sidebar-bottom.njk' %}
            </rocket-navigation>
          </nav>
        </rocket-drawer>
      {% endblock sidebar %}
    </div>

    <div class="theme-able ga-foot-main">
      {% block footer %}
        {% include 'partials/footer.njk' %}
        {% include 'partials/pageJs.njk' %}
        {% include 'partials/mobileNavigationJs.njk' %}
      {% endblock footer %}
    </div>
  </body>

</html>