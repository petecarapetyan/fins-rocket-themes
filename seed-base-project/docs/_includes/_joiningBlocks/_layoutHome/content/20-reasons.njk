<h2 class="reason-header">{{ reasonHeader }}</h2>

<section class="reasons">
  {% for teaser in teasers %}
    <article>
      <a href="{{teaser.href}}">
      <h3>{{ teaser.title }}</h3>
      {{ teaser.img | safe }}
      <div>{{ teaser.text | safe }}</div>
      </a>
    </article>
  {% endfor %}
</section>
